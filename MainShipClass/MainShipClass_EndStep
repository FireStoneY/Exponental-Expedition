#region WEAPON STABILISATION

if (instance_exists(weaponType)) {
	
	weaponType.depth		  = depth - 1; 
	weaponType.phy_position_x = phy_position_x;
	weaponType.phy_position_y = phy_position_y;
	weaponType.phy_active     = 0;
}
#endregion

if (instance_exists(pulsar)) {
	
	pulsar.phy_position_x = phy_position_x;
	pulsar.phy_position_y = phy_position_y;
}
