// attack enemy
if (instance_exists(MainShipClass)) {
	
	for (var i = 0; i < instance_number(MainShipClass); i++) {
		
		var inst = instance_find(MainShipClass, i);
		
		if (group != inst.group) {
			
			var dir = point_direction(phy_position_x, phy_position_y, inst.x, inst.y);
			attack(wpos, dir, inst, weaponType);
			myEnemy = inst;
			exit;
		}		
	}
}
